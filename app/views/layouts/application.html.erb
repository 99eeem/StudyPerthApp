<!DOCTYPE html>
<html>
  <head>
    <title>リンクWA</title>
    <%= csrf_meta_tags %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <%= stylesheet_link_tag 'application', :debug => true, media: 'all', 'data-turbolinks-track': 'reload' %>

       <script src="https://maps.google.com/maps/api/js?key=<%= Rails.application.credentials[:GOOGLE_MAP_KEY] %>&libraries=places" async defer></script>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload',:debug => true %>
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0">


  </head>

  <body id="body">
  <div id="mask"></div>
  <% if content_for?(:body_attributes) %>
  <%= yield(:body_attributes) %>
   <% end %>
    <%=render "layouts/smart_header"%>

   <%=render "layouts/top_header"%>



    <%= yield %>


  <%=render "layouts/footer"%>


  </body>
</html>
