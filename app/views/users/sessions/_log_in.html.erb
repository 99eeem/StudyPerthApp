<div class="left-signup">
    <div class="cover"></div>
    <div class="welcome-signup">
      <h3>Welcome To Perth Experience</h3>
      <p>Your Journey Are full Of Nature and Discovery<br>Please Log In and Get Your Future</p>
    </div>
    <img src="/login_perth.jpg" alt="" class="signup-image">
  </div>
<div class="right-signup">
    <%=link_to(root_path, data: {"turbolinks" => false}) do%>
        <i class="fas fa-long-arrow-alt-right back-page fas-2x"></i>
    <%end%>
  <div class="signup-box">
    <div class="login-header">
      <h3>ログイン</h3>
    </div>

    <div class="main-form">
     <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
      <div class="login-form">
        <div class="login-set">
          <%= f.label :user_name, "ユーザー名"%>
          <%= f.text_field :user_name, class: "login-control" %>
        </div>
      </div>
      <div class="login-form">
        <div class="login-set">
          <%= f.label :password, "パスワード"%>
          <% if @minimum_password_length %>
          <% @minimum_password_length %>
            <% end %>
            <%=  f.password_field :password, class: "login-control", placeholder: "6文字以上" %>
          </div>
      <div class="actions">
      <%= f.submit "Log In", class: 'btn btn-primary btn-lg' %>
      <% end %>
    </div>
  </div>
</div>
<div class="sns-group">
    <p>SNSでログイン</p>
    <ul class="sns-list">
       <li>
         <%= link_to user_twitter_omniauth_authorize_path do %>
         <div class="sns-path">
            <button class="btn btn-primary btn-sm twitter"><i class="fab fa-twitter-square"></i><span>Twitter</span></button>
         </div>
       <% end %>
      </li>
       <li>
          <%= link_to user_google_oauth2_omniauth_authorize_path do %>
          <div class="sns-path">
            <button class="btn btn-primary btn-sm google"><i class="fab fa-google"></i><span>Google</span></button>
          </div>
         <% end %>
        </li>
        <li>
          <%= link_to users_guest_sign_in_path, method: :post do %>
          <div class="sns-path">
            <button class="btn btn-primary btn-sm guest"><i class="fas fa-user-friends  fab"></i><span>Guest</span></button>
          </div>
         <% end %>
        </li>
     </ul>
     </div>
      <div class="move-to-signup">
          <a id="move-to-signup">新規会員登録の方</a>
        </div>
      </div>
  </div>
  </div>
